<div class="container d-flex justify-content-center py-5">


  <div class="col-md-6">

    <form id="signup-form">

      <div class="col">
        <div class="card h-100">
          <div class="card-header">
            Register
          </div>
          <div class="card-body">
            <div class="form-group">
              <label for="username-signup">Username</label>
              <input class="form-control" type="text" id="username-input-signup" />
            </div>
            <div class="form-group">
              <label for="email-signup">Email</label>
              <input class="form-control" type="text" id="email-input-signup" />
            </div>
            <div class="form-group">
              <label for="password-signup">Password</label>
              <input class="form-control" type="password" id="password-input-signup" />
            </div>
          </div>
          <div class="card-footer bg-transparent">
            <button class="btn btn-primary" type="submit">Register</button> <br />
            <div class="pt-3">
              <a href="/login">Already a member? Login.</a>

            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
<script src="/js/signup.js"></script>