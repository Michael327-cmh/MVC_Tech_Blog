
    <div class="album py-5">
      <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each posts}}
          <div class="col">
            <div class="card shadow-sm">
              <img src="https://via.placeholder.com/225" height="225">
              <div class="card-body">
                <h5 class="card-title"><a href="/post/{{id}}">{{posts.title}}</a> <span class="float-end text-muted">{{post.post_date}}</span></h5>
                <p class="card-text">{{posts.description}}</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn">
                          <a class="btn btn-danger" href="/personal/edit/{{id}}">Edit Posts</a>
    </div>
                  </div>
                  <small class="text-muted">{{posts.author}}</small>

                </div>
              </div>
            </div>
          </div>              
          {{/each}}
          </div>
            </div>
          </div>